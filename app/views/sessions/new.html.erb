     <div class='container'>
                
                <div class="signin-row row">
                    <div class="span4"></div>
                    <div class="span8">
                        <div class="container-signin">
                            <legend>Login</legend>
                            
                                <div class="form-inner">
                                    <div class="input-prepend">
                                        <%= form_for :session, url: sign_in_path do |f| %>
                                        <span class="add-on" rel="tooltip" title="Username or E-Mail Address" data-placement="top"><i class="fa fa-user-o"></i></span>
                                        <%= f.text_field :login, autofocus: true, class:"span4" %>
                                    </div>

                                    <div class="input-prepend">
                                        
                                        <span class="add-on"><i class="icon-key"></i></span>
                              <%= f.password_field :password, autocomplete: "off", class:"span4" %>
                                    </div>
                                </div>
                                <footer class="signin-actions">
                                 <%= f.submit "Entrar", class:"btn btn-primary margin_form" %>
                                 <% end %>

                                </footer>
                            </form>
                        </div>
                    </div>
                    <div class="span3"></div>
                </div>