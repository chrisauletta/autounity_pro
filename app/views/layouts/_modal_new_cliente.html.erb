<div id="modalCad" class="modal hide fade modal-lg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					  <div class="modal-header">

					   <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
					   <h3 id="myModalLabel">Editar Peça</h3>
					  </div>
					  <div class="modal-body">

	<%= form_for(@post, url: new_cliente2_path) do |form| %>

  
 <div class="leftcontact">

  <div class="form-group">
    <%= form.label :nome %><span>*</span>
    <span class="icon-case"><i class="fa fa-user"></i></span>
    <%= form.text_field :nome, id: :cliente_nome %>
  </div>

  <div class="form-group">
    <%= form.label :oficio %>
    <%= form.text_field :oficio, id: :cliente_oficio %>
  </div>

  <div class="form-group">
    <%= form.label :telefone %>
    <%= form.text_field :telefone, id: :cliente_telefone %>
  </div>

  <div class="form-group">
    <%= form.label :celular %>
    <%= form.text_field :celular, id: :cliente_celular %>
  </div>

  <div class="form-group">
    <%= form.label :comercial %>
    <%= form.text_field :comercial, id: :cliente_comercial %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :cliente_email %>
  </div>

  <div class="form-group">
    <%= form.label :observacoes %>
    <%= form.text_field :observacoes, id: :cliente_observacoes %>
  </div>

</div>

 <div class="rightcontact">

<%= form.fields_for(:endereco) do |fe|%>

  <div class="form-group">
    <%= fe.label :rua %>
    <%= fe.text_field :rua, id: :endereco_rua %>
  </div>
  
  <div class="form-group">
    <%= fe.label :numero %>
    <%= fe.text_field :numero, id: :endereco_numero %>
  </div>

  <div class="form-group">
    <%= fe.label :bairro %>
    <%= fe.text_field :bairro, id: :endereco_bairro %>
  </div>

  <div class="form-group">
    <%= fe.label :cidade %>
    <%= fe.text_field :cidade, id: :endereco_cidade %>
  </div>

  <div class="form-group">
    <%= fe.label :uf %>
    <%= fe.text_field :uf, id: :endereco_uf %>
  </div>

  <div class="form-group">
    <%= fe.label :cep %>
    <%= fe.text_field :cep, id: :endereco_cep %>
  </div>

  <div class="form-group">
    <%= fe.label :complemento %>
    <%= fe.text_field :complemento, id: :endereco_complemento %>
  </div>

<%end%>
</div>
  <div class="actions">
    <%= form.submit "Editar",class:"btn btn-primary" %>
  </div>

<% end %>


				</div>
				</div>
		        