  </div>
  <div class="modal-body">
<% if logged_in? %>
<%end%>

  
      <%= form_tag(pega_peca_path, method: :get, :remote => true) do %>
          <div class="form-inline"> 
          <%= label_tag :nome %>
          <%= text_field_tag :nome_p %>
          <%= submit_tag "Encontrar"%>
          </div>
          <% end %>
          
      <%= form_tag inclui_peca_path do%>

      <div class="row">
